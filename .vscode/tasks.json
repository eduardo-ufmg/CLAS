{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Gabriel",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}/cpp/GabrielGraph"
      },
      "problemMatcher": []
    },
    {
      "label": "Debug Gabriel",
      "type": "shell",
      "command": "make debug",
      "options": {
        "cwd": "${workspaceFolder}/cpp/GabrielGraph"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build Gabriel",
      "dependsOn": [
        "Clean Gabriel",
        "Debug Gabriel"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clean Filter",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}/cpp/Filter"
      },
      "problemMatcher": []
    },
    {
      "label": "Debug Filter",
      "type": "shell",
      "command": "make debug",
      "options": {
        "cwd": "${workspaceFolder}/cpp/Filter"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build Filter",
      "dependsOn": [
        "Clean Filter",
        "Debug Filter"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Clean Hyperplane",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}/cpp/classifiers/Common"
      },
      "problemMatcher": []
    },
    {
      "label": "Debug Hyperplane",
      "type": "shell",
      "command": "make debug",
      "options": {
        "cwd": "${workspaceFolder}/cpp/classifiers/Common"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build Hyperplane",
      "dependsOn": [
        "Clean Hyperplane",
        "Debug Hyperplane"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Clean Chip",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}/cpp/classifiers/chip-clas"
      },
      "problemMatcher": []
    },
    {
      "label": "Debug Chip",
      "type": "shell",
      "command": "make debug",
      "options": {
        "cwd": "${workspaceFolder}/cpp/classifiers/chip-clas"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build Chip",
      "dependsOn": [
        "Clean Chip",
        "Debug Chip"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Build All",
      "dependsOn": [
        "Build Gabriel",
        "Build Filter",
        "Build Hyperplane",
        "Build Chip"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build"
      }
    }
  ]
}
